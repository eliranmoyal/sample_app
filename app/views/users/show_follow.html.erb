<table summary ="Information  about following/followers">
	<tr>
		<td class="main">
			<h1>
				<%= @title %>
			</h1>

			<% if @users.any? %>
			<ul class="users">
				<%= render @users %>
			</ul>
			<%= will_paginate @users %>
			<% end %>
		</td>
		<td class="sidebar round">
			<%= render 'sidebar' %>
			<% if @users.any? %>
			<% @users.each do |user| %>
			<%= link_to gravatar_for_user(user,:size=>30) , user %>
			<% end  %>
			<% end %>
		</td>

	</tr>




</table>