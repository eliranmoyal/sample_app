<table class = "profile">
	<tr>
		<td class ="main">
			<h1>
				<%= gravatar_for_user @user %>
				<%= @user.name %> 
			</h1>
			<%= render 'follow_form' if signed_in? %>
			<% if @user.microposts.any? %>
				<table class = "microposts" summary = "showing attributes">
					<%= render @microposts %>
				</table>
				<%= will_paginate @microposts %>
			<% end %>
		</td>	
		<td class ="sidebar round">
			<%= render 'sidebar' %>
		</td>

	</tr>
</table>
